@model IEnumerable<StraussDA.BlogLib.Post>
@{
    ViewData["Title"] = "Home Page";
}
@Html.Partial("../Shared/_SubMenu")

<div class="row">
    <aside class="col-md-2 col-lg-2 p-1 text-center bg-dark">
        <img class="img-fluid mx-auto" src="image/dave.jpg">
        <h5 class="pt-2 text-info">Portfolio Projects</h5>
        <div class="text-left">
            <h6 class="text-light">Pet API Quiz</h6>
            <ul class="list-group-item-warning list-unstyled pl-3">
                <li><a class="portfolio-link" href="http://petpersonalityquiz.azurewebsites.net/">&#x2192;View</a></li>
                <li><a class="portfolio-link" href="https://davestrauss07.visualstudio.com/PersonalityQuizApi">&#x2192;Repository</a></li>
                <li><a class="portfolio-link" href="#">&#x2192;Article</a></li>
            </ul>
            <h6 class="text-light">Coding Blog</h6>
            <ul class="list-group-item-warning list-unstyled pl-3">
                <li><a class="portfolio-link" href="https://davidstrauss.azurewebsites.net/">&#x2192;View</a></li>
                <li><a class="portfolio-link" href="https://github.com/dstrauss07/DstraussSQLBLOG">&#x2192;Repository</a></li>
                <li><a class="portfolio-link" href="https://davidstrauss.azurewebsites.net/Details/1">&#x2192;Article</a></li>
            </ul>
            <h6 class="text-light">Mobile Game</h6>
            <ul class="list-group-item-warning list-unstyled pl-3">
                <li><a class="portfolio-link" href="https://developer.cloud.unity3d.com/share/share.html?shareId=-J02g7LXOV">&#x2192;View</a></li>
                <li><a class="portfolio-link" href="https://github.com/dstrauss07/shipWright2">&#x2192;Repository</a></li>
                <li><a class="portfolio-link" href="#">&#x2192;Article</a></li>
            </ul>
            <h6 class="text-light">NODE.JS RPG</h6>
            <ul class="list-group-item-warning list-unstyled pl-3">
                <li><a class="portfolio-link" href="https://thehydranodejs.azurewebsites.net">&#x2192;View</a></li>
                <li><a class="portfolio-link" href="https://github.com/dstrauss07/filesystemRPG">&#x2192;Repository</a></li>
                <li><a class="portfolio-link" href="#">&#x2192;Article</a></li>
            </ul>
        </div>

    </aside>
    <main class="col-md-10 col-lg-10 p-1" id="article-area">

        @{ int bgAlt = 0;
            foreach (var item in Model)
            {
                if (bgAlt == 0)
                {
                    <div class="bg-lightgreen pl-4 pr-4 pt-1 pb-1 mb-1 article-content">@Html.Raw(item.PostContent)</div>;
                    bgAlt++;
                    continue;
                }
                if (bgAlt == 1)
                {<div class="bg-lightcoral pl-4 pr-4 pt-1 pb-1 mb-1 article-content">@Html.Raw(item.PostContent)</div>;
                bgAlt--;
                continue;
            }
        }
        }

    </main>
</div>
