@model IEnumerable<StraussDA.BlogLib.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr class="w-100">

                <td class="col-1">
                    <b> @Html.DisplayFor(modelItem => item.PostName) </b>
                </td>
                <td class="col-1 float-left">
                    ID# @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="col-1">
                    Tags:<  @Html.DisplayFor(modelItem => item.PostTags) >
                </td>
            </tr>
            <tr>
                <td class="text-center col-10 bg-dark text-white">
                    @Html.DisplayFor(modelItem => item.PostContent)
                </td>
            </tr>
            <tr class="border-bottom border-info float-md-right">
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    Posted:  @Html.DisplayFor(modelItem => item.PostDate)
                </td>
                <td>
                    Modified:  @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>
            </tr>
         

        }
    </tbody>
    </table>
