@model IEnumerable<StraussDA.BlogLib.Post>

@{
    ViewData["Title"] = "Index";
}

@Html.Partial("_SubMenu")

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">ID</th>
                <th scope="col">Date Posted</th>
                <th scope="col">Date Modified</th>
                <th scope="col"> Tags</th>
            </tr>
        </thead>
        <tbody>

            <tr>

                <td class="colspan-1">
                    <b> @Html.DisplayFor(modelItem => item.PostName) </b>
                </td>
                <td class="colspan-1">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td class="colspan-1">
                    @Html.DisplayFor(modelItem => item.PostDate)
                </td>
                <td class="colspan-1">
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>
                <td class="colspan-1">
                    @Html.DisplayFor(modelItem => item.PostTags)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    </table>
    <table>
        <tbody>
            <tr>
                <td class="text-center colspan-6 bg-dark text-white border-bottom border-info">
                    @{
                        @Html.Raw(item.PostContent);
                    }
                </td>
            </tr>
        </tbody>
    </table>
    <div class="row flex-xl-column-reverse">    <span class="divideline col-12 w-100"></span></div>




}
